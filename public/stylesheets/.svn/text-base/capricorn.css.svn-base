body { 
	margin:0;
	padding:0;
	 }
	
ol, ul, td {
	font-family: verdana, arial, helvetica, sans-serif;
	font-size:   11px;
	line-height: 14px;
	font-weight:normal;
	padding:1em;
}

p {
	font-family: helvetica, arial, helvetica, sans-serif;
	font-size:   16px;
	line-height: 22px;
	font-weight:normal;
	color: #3d3d3d;
	padding:2px;
	text-align:left;
	}
	
table {
	padding:10px;
	height:auto;
}


label {
	font-size:12px;
	color:#655c50;
}

tr {
	vertical-align:top ;
	height:auto;
}

td {
	/*borders and padding to make the table readable*/
	padding-left: 5px;
}

pre {
  background-color: #3d3d3d;
  padding: 10px;
  font-size: 11px;
}



a { color: gray; font-size:12px; text-decoration:none; }
a:visited { color:orange; }
a:hover { color: orange; }

em {
	font-family: sans-serif;
	font-size:   14px;
	font-weight: normal;
	color:#fff;
}

h1 {
	font-family: sans-serif;
	text-align:left;
	font-size: 26px;
	font-style:italic ;
	color: #fff; 
}

h2 {
	font-family: sans-serif;
	text-align:left;
	font-size: 20px;
	font-style:normal ;
	color: #a4451a;
}

h3 {
	text-align:left;
	color:#828f98;
	line-height:20px;
}

ul {
}

li {
	margin-bottom:5px;
}

li a {
	color:#3d3d3d;
}


#wrapper {
	margin:0;
	padding:0;
	width:900px;
	margin-left:10%;
	font-family: verdana, arial, helvetica, sans-serif;
	font-size:   11px;
	line-height: 14px;
	font-weight:normal;
	color: #3d3d3d;	
/*	background:url(/images/database.gif);*/
	}

#capricorn {
	padding:0;
	margin:0;
	margin-left:10%;
	margin-bottom:1em;
	background:#fff;
}



#main {
	padding:2em;
	margin-left:2em;
	width:100%;
	background:#515341;
}

#top_image_corner_left {
	float:left;
	vertical-align:top;
	padding:0;
	margin:0;
}

#top_image_corner_right {
	float:right;
	vertical-align:top;
	padding:0;
	margin:0;
}

.image {
	padding:0;
	margin:0;
	height:auto;
	vertical-align:bottom;
}


#logo {
	padding-left:7em;
}


#menu {
	height:20px;
	font-family: verdana, arial, helvetica, sans-serif;
	font-style:italic;
	margin:0;
	padding:0;
	padding-left:5em;
	margin-right:4em;
	background:#0068c6;	
}

#content {
	margin:0;
	padding:0;
	text-align:justify;
	font-size:14px;
}

#text {
	margin:0;
	padding:2.5em;
	padding-left:0;
}

#homepage {
}

#content .text {
	padding:1em;
	padding-bottom:3px;
}

.legend {
	font-style:italic;
	margin-top:1em;
	font-size: 10px;
	padding:1em;
	color:#3d3d3d;
}

p.legend {
	font-style:italic;
	margin-top:1em;
	font-size: 14px;
	padding:1em;
	line-height:18px;
	color: #3d3d3d;
	text-align:justify;
}

p.home_legend {
	font-style:italic;
	margin-top:1em;
	font-size: 14px;
	line-height:18px;
	padding:1em;
	color: #656565;
	text-align:justify;
}

.bullet {
	background: url(../images/bullet.gif) no-repeat;
	padding-left:20px;
	height:10px;
}
.note {
	margin: 1px;
	font-size: 10px;
	font-style: italic;	
	font-weight: normal;
	line-height: 16px;
	color:#8a8a8a;
}

span.note {
	margin: 1px;
	font-size: 10px;
	font-style: italic;	
	font-weight: normal;
	line-height: 12px;
	color:#8a8a8a;
}
td .note a {
	font-style: italic;	
	font-size: 10px;
}

table.portfolio {
}

.note_white {
	margin: 1px;
	font-size: 10px;
	font-style: italic;	
	font-weight: normal;
	line-height: 16px;
	color: #fff;
	
}

.website {
	padding:1em;
	width:95%;
	background:#fff;
}

.website h3 {
	font-family: helvetica, sans-serif;
	color:#666;
	font-size:14px;
}

.website a {
	font-size: 10px;
	font-style: italic;	
	font-weight: normal;
	text-decoration:none;
}

.website .image{
	padding:0;
	height:140px;
	padding-bottom:2em;
}

.website .image a:hover{
	color:orange;
	} 
	
div.caption {
	margin:0;
	padding:0;
	font-size: 10px;
	font-style: italic;	
	font-weight: normal;
	line-height: 16px;
	color:#666;
	margin-top:5px;
}
.website .joint {
	font-size:9px;
	font-style: italic;	
	color:#8a8a8a;
}

.website .joint a {
	font-size:9px;
	color:#3d3d3d;
	font-style: italic;	
}

.website .joint a:hover {
	background:white;
}